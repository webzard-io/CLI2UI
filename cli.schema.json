{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$ref": "#/$defs/CLI",
    "$defs": {
        "CLI": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "help": {
                    "type": "string"
                },
                "optionDelim": {
                    "type": "string"
                },
                "command": {
                    "$ref": "#/$defs/Command"
                },
                "explicitBool": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name",
                "command"
            ]
        },
        "Command": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "display": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "flags": {
                    "items": {
                        "$ref": "#/$defs/Option"
                    },
                    "type": "array"
                },
                "args": {
                    "items": {
                        "$ref": "#/$defs/Option"
                    },
                    "type": "array"
                },
                "subcommands": {
                    "items": {
                        "$ref": "#/$defs/Command"
                    },
                    "type": "array"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name"
            ]
        },
        "Option": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "display": {
                    "type": "string"
                },
                "long": {
                    "type": "boolean"
                },
                "description": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "default": {
                    "type": "object"
                },
                "options": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name",
                "type"
            ]
        }
    }
}